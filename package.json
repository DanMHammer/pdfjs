{
  "name": "pdfjs",
  "author": "Markus Ast <npm.m@rkusa.st>",
  "version": "2.0.0",
  "description": "A Portable Document Format (PDF) generation library targeting both the server- and client-side.",
  "keywords": [
    "pdf",
    "generator"
  ],
  "license": "MIT",
  "homepage": "https://github.com/rkusa/pdfjs",
  "bugs": "https://github.com/rkusa/pdfjs/issues",
  "main": "pkg/dist-node",
  "module": "src/index.js",
  "scripts": {
    "build": "pack build",
    "test": "npm run build && npm run test:pdfs && npm run test:types",
    "test:pdfs": "node test/index.js",
    "test:types": "tsc --project ./types"
  },
  "dependencies": {
    "@rkusa/linebreak": "^1.0.0",
    "opentype.js": "^0.9.0",
    "pako": "^1.0.8",
    "unorm": "^1.4.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.1",
    "@pika/plugin-build-node": "^0.3.9",
    "@pika/plugin-build-web": "^0.3.9",
    "@pika/plugin-standard-pkg": "^0.3.9",
    "@types/node": "^9.6.41",
    "tape": "^4.9.2",
    "typescript": "^2.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rkusa/pdfjs.git"
  },
  "engines": {
    "node": ">=7"
  },
  "types": "./types/main.d.ts",
  "sideEffects": false,
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  }
}
